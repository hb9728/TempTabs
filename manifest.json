{
  "manifest_version": 3,
  "name": "TempTabs â€” working-memory bookmarks",
  "short_name": "TempTabs",
  "version": "1.0.0",
  "description": "Quickly stash the current tab (or a link) to a temporary list you can sort, edit, and auto-expire.",

  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },

  "action": {
    "default_title": "TempTabs",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png"
    }
  },

  "options_page": "options.html",

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "permissions": [
    "storage",
    "contextMenus",
    "tabs",
    "alarms"
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}